            }
            
            // Adicionar resposta do bot
            adicionarMensagem(resposta, 'bot');
            
            // Animar KPI atualizado
            if (kpiAtualizado) {
                const kpiCard = document.getElementById(kpiAtualizado);
                kpiCard.classList.add('kpi-updated');
                setTimeout(() => {
                    kpiCard.classList.remove('kpi-updated');
                }, 1600);
            }
        }

        // Focar no input ao carregar
        window.onload = function() {
            document.getElementById('userInput').focus();
            
            // Mensagem de boas-vindas adicional ap√≥s 2 segundos
            setTimeout(() => {
                adicionarMensagem('üí° Dica: Voc√™ pode fazer perguntas sobre receitas, produtos, regi√µes ou per√≠odos espec√≠ficos. Os dados de todas as 12 planilhas mensais est√£o dispon√≠veis para an√°lise!', 'bot');
