                    <input 
                        type="text" 
                        id="userInput" 
                        placeholder="Qual a receita no Nordeste em Mar√ßo?..."
                        onkeypress="if(event.key === 'Enter') enviarConsulta()"
                    >
                    <button id="sendButton" onclick="enviarConsulta()">Enviar</button>
