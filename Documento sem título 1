    <script>
        // ============================================
        // CHAVE DA GEMINI API PARA USO NA INTEGRA√á√ÉO FINAL: AIzaSyAE1c4ZZv0g3tEzpEF1O_Gstqe_Bqp6iPM
        // ============================================
        
        // ============================================
        // DADOS: A an√°lise √© baseada em 12 planilhas de vendas CSV (Jan-Dez/2024), 
        // acessadas via Google Sheets API (necess√°ria integra√ß√£o no backend).
        // Estrutura: Data, ID_Transacao, Produto, Categoria, Regi√£o, Quantidade, Pre√ßo_Unit√°rio, Receita_Total
        // ============================================

        function enviarConsulta() {
            const input = document.getElementById('userInput');
            const mensagem = input.value.trim();
            
            if (mensagem === '') return;
            
            // Adicionar mensagem do usu√°rio
            adicionarMensagem(mensagem, 'user');
            
            // Limpar input
            input.value = '';
            
            // Adicionar indicador de digita√ß√£o
            adicionarIndicadorDigitacao();
            
            // Simular processamento do bot com delay realista
            setTimeout(() => {
                removerIndicadorDigitacao();
                processarConsulta(mensagem);
            }, 1200);
        }

        function adicionarMensagem(texto, tipo) {
            const chatMessages = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${tipo}`;
            
            const bubbleDiv = document.createElement('div');
            bubbleDiv.className = 'message-bubble';
            
            if (tipo === 'bot') {
                const authorDiv = document.createElement('div');
                authorDiv.className = 'message-author';
                authorDiv.textContent = 'Bot Alpha';
                bubbleDiv.appendChild(authorDiv);
            }
            
            const textNode = document.createTextNode(texto);
            bubbleDiv.appendChild(textNode);
            
            messageDiv.appendChild(bubbleDiv);
            chatMessages.appendChild(messageDiv);
            
            // Scroll autom√°tico suave
            chatMessages.scrollTo({
                top: chatMessages.scrollHeight,
                behavior: 'smooth'
            });
        }

        function adicionarIndicadorDigitacao() {
            const chatMessages = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message bot';
            messageDiv.id = 'typing-indicator';
            
            const bubbleDiv = document.createElement('div');
            bubbleDiv.className = 'message-bubble';
            
            const authorDiv = document.createElement('div');
            authorDiv.className = 'message-author';
            authorDiv.textContent = 'Bot Alpha';
            bubbleDiv.appendChild(authorDiv);
            
            const typingDiv = document.createElement('div');
            typingDiv.className = 'typing-indicator';
            typingDiv.innerHTML = '<span class="typing-dot"></span><span class="typing-dot"></span><span class="typing-dot"></span>';
            bubbleDiv.appendChild(typingDiv);
            
            messageDiv.appendChild(bubbleDiv);
            chatMessages.appendChild(messageDiv);
            
            chatMessages.scrollTo({
                top: chatMessages.scrollHeight,
                behavior: 'smooth'
            });
        }

        function removerIndicadorDigitacao() {
            const indicator = document.getElementById('typing-indicator');
            if (indicator) {
                indicator.remove();
            }
        }

        function processarConsulta(texto) {
            const textoLower = texto.toLowerCase();
            let resposta = '';
            let kpiAtualizado = null;
            
            // ============================================
            // L√ìGICA DE INSIGHTS DIN√ÇMICOS COM SIMULA√á√ÉO
            // DE INTEGRA√á√ÉO GEMINI API + GOOGLE SHEETS
            // ============================================
            
            // DETEC√á√ÉO DE REGI√ÉO - Atualiza KPI 3
            if (textoLower.includes('nordeste')) {
                const kpiRegiaoValue = document.getElementById('kpi-regiao-value');
                kpiRegiaoValue.textContent = 'Nordeste - Top Vendas (Consulta Ativa)';
                kpiAtualizado = 'kpi-regiao';
                resposta = 'Consulta processada com a Gemini API. A regi√£o Nordeste registrou R$ 3.456.780 em vendas em 2024, representando 22,7% do total. O produto mais vendido foi "C√¢mera Full HD" com 1.234 unidades. Um novo insight foi atualizado no painel lateral do Dashboard.';
            } 
            else if (textoLower.includes('sul')) {
                const kpiRegiaoValue = document.getElementById('kpi-regiao-value');
                kpiRegiaoValue.textContent = 'Sul - Top Vendas (Consulta Ativa)';
                kpiAtualizado = 'kpi-regiao';
                resposta = 'Consulta processada com a Gemini API. A regi√£o Sul apresentou R$ 2.987.450 em vendas, com crescimento de 18% em rela√ß√£o a 2023. Destaque para "Monitor 4K" e "Teclado Mec√¢nico". Um novo insight foi atualizado no painel lateral do Dashboard.';
            }
            else if (textoLower.includes('norte')) {
                const kpiRegiaoValue = document.getElementById('kpi-regiao-value');
                kpiRegiaoValue.textContent = 'Norte - Top Vendas (Consulta Ativa)';
                kpiAtualizado = 'kpi-regiao';
                resposta = 'Consulta processada com a Gemini API. A regi√£o Norte alcan√ßou R$ 2.145.320 em vendas, mostrando potencial emergente com 15% de crescimento. "Impressora Wi-Fi" liderou as vendas. Um novo insight foi atualizado no painel lateral do Dashboard.';
            }
            else if (textoLower.includes('centro-oeste') || textoLower.includes('centro oeste')) {
                const kpiRegiaoValue = document.getElementById('kpi-regiao-value');
                kpiRegiaoValue.textContent = 'Centro-Oeste - Top Vendas (Consulta Ativa)';
                kpiAtualizado = 'kpi-regiao';
                resposta = 'Consulta processada com a Gemini API. A regi√£o Centro-Oeste registrou R$ 2.678.900 em vendas, com crescimento de 20% e forte demanda por perif√©ricos. Um novo insight foi atualizado no painel lateral do Dashboard.';
            }
            else if (textoLower.includes('sudeste')) {
                const kpiRegiaoValue = document.getElementById('kpi-regiao-value');
                kpiRegiaoValue.textContent = 'Sudeste - Top Vendas (Consulta Ativa)';
                kpiAtualizado = 'kpi-regiao';
                resposta = 'Consulta processada com a Gemini API. A regi√£o Sudeste mant√©m a lideran√ßa com R$ 5.971.850 em vendas (39,2% do total). Concentra os maiores volumes em todas as categorias. Um novo insight foi atualizado no painel lateral do Dashboard.';
            }
            
            // DETEC√á√ÉO DE QUANTIDADE - Atualiza KPI 2
            else if (textoLower.includes('quantidade') || textoLower.includes('unidades')) {
                const kpiQuantidadeValue = document.getElementById('kpi-quantidade-value');
                kpiQuantidadeValue.textContent = '40.150 Unidades (Novo Insight)';
                kpiAtualizado = 'kpi-quantidade';
                resposta = 'Consulta processada com a Gemini API. An√°lise detalhada revelou que, incluindo devolu√ß√µes processadas, o volume total ajustado √© de 40.150 unidades vendidas em 2024. Um novo insight foi atualizado no painel lateral do Dashboard.';
            }
            
            // DETEC√á√ÉO DE RECEITA - Atualiza KPI 1
            else if (textoLower.includes('receita') || textoLower.includes('faturamento')) {
                const kpiReceitaValue = document.getElementById('kpi-receita-value');
                kpiReceitaValue.textContent = 'R$ 15.240.300 (Confirmado)';
                kpiAtualizado = 'kpi-receita';
                resposta = 'Consulta processada com a Gemini API. A receita total de 2024 foi confirmada em R$ 15.240.300, representando um crescimento de 12,3% em rela√ß√£o a 2023. Os meses de maior faturamento foram Novembro (R$ 1.456.780) e Dezembro (R$ 1.823.450). Um novo insight foi atualizado no painel lateral do Dashboard.';
            }
            
            // CONSULTAS SOBRE MESES ESPEC√çFICOS
            else if (textoLower.includes('mar√ßo') || textoLower.includes('marco')) {
                if (textoLower.includes('nordeste')) {
                    resposta = 'Consulta processada com a Gemini API. Em Mar√ßo de 2024, a regi√£o Nordeste registrou receita de R$ 287.650, com 856 unidades vendidas. O produto destaque foi "C√¢mera Full HD" (124 unidades). Um novo insight foi atualizado no painel lateral do Dashboard.';
                    const kpiRegiaoValue = document.getElementById('kpi-regiao-value');
                    kpiRegiaoValue.textContent = 'Nordeste - Mar√ßo/2024';
                    kpiAtualizado = 'kpi-regiao';
                } else {
                    resposta = 'Consulta processada com a Gemini API. Em Mar√ßo de 2024, foram vendidas 2.890 unidades com receita total de R$ 1.156.780. O produto mais vendido foi "Monitor 4K" com 387 unidades, seguido por "Teclado Mec√¢nico" com 312 unidades.';
                }
            }
            else if (textoLower.includes('janeiro')) {
                resposta = 'Consulta processada com a Gemini API. Janeiro de 2024 registrou 2.450 unidades vendidas e receita de R$ 987.340. O produto destaque foi "Impressora Wi-Fi" com forte demanda p√≥s-feriados.';
            }
            else if (textoLower.includes('dezembro')) {
                resposta = 'Consulta processada com a Gemini API. Dezembro foi o melhor m√™s de 2024, com 4.567 unidades vendidas e receita de R$ 1.823.450. Houve forte demanda em todas as categorias devido √†s festas de fim de ano.';
            }
            
            // CONSULTAS SOBRE PRODUTOS
            else if (textoLower.includes('produto mais vendido') || textoLower.includes('top produto')) {
                resposta = 'Consulta processada com a Gemini API. O produto mais vendido em 2024 foi "Monitor 4K" com 4.567 unidades (12,9% do total), gerando R$ 16.328.537 em receita. Em segundo lugar: "Teclado Mec√¢nico" com 3.892 unidades.';
            }
            
            // CONSULTAS SOBRE CATEGORIAS
            else if (textoLower.includes('categoria') || textoLower.includes('eletr√¥nicos') || textoLower.includes('perif√©ricos')) {
                resposta = 'Consulta processada com a Gemini API. A categoria "Eletr√¥nicos" liderou com R$ 9.145.680 (60% da receita), seguida por "Perif√©ricos" com R$ 4.892.340 (32%) e "Acess√≥rios" com R$ 1.202.280 (8%).';
            }
            
            // CONSULTAS SOBRE TEND√äNCIAS
            else if (textoLower.includes('tend√™ncia') || textoLower.includes('crescimento') || textoLower.includes('evolu√ß√£o')) {
                resposta = 'Consulta processada com a Gemini API. A an√°lise de tend√™ncias mostra crescimento consistente ao longo de 2024, com picos em Mar√ßo (+15%), Julho (+18%) e Dezembro (+32%). O segundo semestre concentrou 58% das vendas totais.';
            }
            
            // CONSULTAS SOBRE COMPARA√á√ÉO
            else if (textoLower.includes('comparar') || textoLower.includes('diferen√ßa') || textoLower.includes('versus')) {
                resposta = 'Consulta processada com a Gemini API. Para compara√ß√µes detalhadas, especifique os elementos (ex: "comparar Nordeste e Sul", "diferen√ßa entre Janeiro e Dezembro"). Posso analisar regi√µes, meses, produtos ou categorias.';
            }
            
            // RESPOSTA PADR√ÉO COM SUGEST√ïES
            else {
                resposta = `Consulta processada com a Gemini API: "${texto}". 
                
